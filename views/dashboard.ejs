<%- include('partials/header') %>
<div class="container mt-4">
    <h1 class="text-center">Study Planner Dashboard</h1>
    <p class="text-center">45 days remaining until exams</p>
    <div class="progress my-4">
        <div class="progress-bar" role="progressbar" style="width: 40%;" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100">40% Completed</div>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Subject</th>
                <th>Topic</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            <% tasks.forEach(task => { %>
            <tr>
                <td><%= task.subject %></td>
                <td><%= task.topic %></td>
                <td><%= task.status %></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<%- include('partials/footer') %>
