<%- include('partials/header') %>
<div class="container mt-5">
    <h1 class="text-center text-light mb-4" data-aos="fade-down" data-aos-duration="1000">Timetable</h1>
    <form class="card p-4 bg-light shadow" data-aos="fade-up" data-aos-duration="1000">
        <div class="mb-3">
            <label for="studyHours" class="form-label">How many hours can you study daily?</label>
            <input type="number" class="form-control" id="studyHours" name="studyHours" placeholder="Enter hours">
        </div>
        <div class="d-grid">
            <button type="submit" class="btn btn-primary">Generate Timetable</button>
        </div>
    </form>
    <div class="mt-4">
        <% if (dailyTasks && dailyTasks.length > 0) { %>
        <h2 class="text-center text-light">Your Daily Timetable</h2>
        <% dailyTasks.forEach((task, index) => { %>
        <div class="card p-3 mt-3" data-aos="fade-right" data-aos-duration="1000">
            <h4>Session <%= index + 1 %></h4>
            <p><%= task.subject %>: <%= task.topic %> (Difficulty: <%= task.difficulty %>)</p>
        </div>
        <% }); %>
        <% } else { %>
        <p class="text-light text-center mt-4">No timetable generated yet.</p>
        <% } %>
    </div>
</div>
<%- include('partials/footer') %>
