<%- include('partials/header') %>
<div class="container mt-4">
    <h1>Daily and Weekly Tasks</h1>
    
    <h2>Daily Tasks</h2>
    <ul class="list-group mb-4">
        <% dailyTasks.forEach(task => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
                <strong><%= task.title %></strong>
                <% if (task.description) { %> - <%= task.description %> <% } %>
            </div>
            <div>
                <form action="/tasks/<%= task._id %>/toggle" method="POST" style="display: inline;">
                    <button class="btn btn-sm <%= task.completed ? 'btn-success' : 'btn-secondary' %>">
                        <%= task.completed ? 'Completed' : 'Mark as Complete' %>
                    </button>
                </form>
                <form action="/tasks/<%= task._id %>/delete" method="POST" style="display: inline;">
                    <button class="btn btn-danger btn-sm">Delete</button>
                </form>
            </div>
        </li>
        <% }) %>
    </ul>

    <h2>Weekly Tasks</h2>
    <ul class="list-group mb-4">
        <% weeklyTasks.forEach(task => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
                <strong><%= task.title %></strong>
                <% if (task.description) { %> - <%= task.description %> <% } %>
            </div>
            <div>
                <form action="/tasks/<%= task._id %>/toggle" method="POST" style="display: inline;">
                    <button class="btn btn-sm <%= task.completed ? 'btn-success' : 'btn-secondary' %>">
                        <%= task.completed ? 'Completed' : 'Mark as Complete' %>
                    </button>
                </form>
                <form action="/tasks/<%= task._id %>/delete" method="POST" style="display: inline;">
                    <button class="btn btn-danger btn-sm">Delete</button>
                </form>
            </div>
        </li>
        <% }) %>
    </ul>

    <h3>Add a New Task</h3>
    <form action="/tasks/add" method="POST" class="mb-4">
        <div class="mb-3">
            <input type="text" name="title" class="form-control" placeholder="Task Title" required>
        </div>
        <div class="mb-3">
            <textarea name="description" class="form-control" placeholder="Task Description (optional)"></textarea>
        </div>
        <div class="mb-3">
            <select name="type" class="form-select" required>
                <option value="daily">Daily</option>
                <option value="weekly">Weekly</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Add Task</button>
    </form>
</div>
<%- include('partials/footer') %>
